<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MemberMapper">

<resultMap type="org.zerock.domain.MemberVO" id="memberMap">
	<!-- id = primary key(pk) 값을 매핑
		 result = 일반 column을 매핑 -->
	<id property="userid" column="userid" /> <!-- id가 존재할 경우, userid가 같은 경우 다른 정보만 표시 /내부에서 데이터를 읽어올때 차이가 나는 것으로 보인다-->
	<result property="userid" column="userid" /> <!-- 각각 모두 표시, test에서는 구별이 가는데  web에서는 모르겠다...;; -->
	<result property="userpw" column="userpw" />
	<result property="username" column="username" />
	<result property="regDate" column="regdate" />
	<result property="updateDate" column="updatedate" />
	<collection property="authList" resultMap="authMap">
	</collection>
</resultMap>
<resultMap type="org.zerock.domain.AuthVO" id="authMap">
	<result property="userid" column="userid"/>
	<result property="auth" column="auth"/>
</resultMap>

<select id="read" resultMap="memberMap">
	select mem.userid, userpw, username, enabled, regdate, updatedate, auth 
	from
		tbl_member mem LEFT OUTER JOIN tbl_member_auth auth on mem.userid = auth.userid
	where mem.userid = #{userid}
</select>

</mapper>